<section class="about-sec py-5">
    <div class="container">
        <div class="row g-0 align-items-stretch">
            <div class="col-md-6">
                <div class="about-img">
                    <img src="{{ section.settings.image | img_url: 'master' }}" alt="">
                </div>
            </div>
            <div class="col-md-6">
                <div class="about-content bg-2 ">
                    <div>
                        <h3>{{ section.settings.title }}</h3>
                        {{ section.settings.content }}
                        
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>


{% schema %}
    {
      "name": "Cus About Page",
      "tag": "section",
      "class": "announcement-bar-section",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Collections",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "default": "<p>Collections</p>",
          "label": "Content"
        },
        
        {
          "type": "select",
          "id": "my_select_field",
          "label": "Image Position",
          "options": [
            {
              "value": "option1",
              "label": "Image Left"
            },
            {
              "value": "option2",
              "label": "Image Right"
            }
          ]
        }
    ],
    "presets": [
        {
          "name": "Cus About Page"
        }
      ]
    }
    {% endschema %}

    
