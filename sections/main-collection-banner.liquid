<div class="braedcumb" style="background-image: url({% if section.settings.banner_img !=blank %}{{ section.settings.banner_img | img_url: 'master' }} {% else %}{{ 'about-back.png' | asset_url }}{% endif %});">
    <div class="container position-relative">
        <div class="row align-items-center">

            <div class="banner-content">
                <h2>{{- collection.title | escape -}}</h2>
            </div>
        </div>
    </div>
</div>




{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_img",
      "label": "Image"
    }
  ]
}
{% endschema %}
