{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'section-footer.css' | asset_url | stylesheet_tag }}
{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
{{ 'component-list-menu.css' | asset_url | stylesheet_tag }}
{{ 'component-list-payment.css' | asset_url | stylesheet_tag }}
{{ 'component-list-social.css' | asset_url | stylesheet_tag }}
{%- if section.settings.enable_country_selector or section.settings.enable_language_selector -%}
  {{ 'component-localization-form.css' | asset_url | stylesheet_tag }}
{%- endif -%}

<footer class="footer ">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-4 ">
                <div class="footer-info">
                    <a href="/">
                        <img src="{{ section.settings.footer_logo | img_url: 'master' }}" alt="Logo">
                    </a>
                    {{ section.settings.content }}
                </div>
            </div>
            <div class="col-12 col-lg-2 ">
                <div class="footer__nav">
                    <h6>{{ section.settings.menu_title_1 }}</h6>
                    {%- assign footer_menu = section.settings.footer_menu -%}
                    {%- if footer_menu != blank -%}
                      {% assign linklist = footer_menu | linklist %}
                      {% if linklist.links.size > 0 %}
                        <ul>
                          {% for link in linklist.links %}
                            <li><a href="{{ link.url }}">{{ link.title | escape }}</a></li>
                          {% endfor %}
                        </ul>
                      {% endif %}
                    {%- endif -%}
                
                </div>
            </div>
            <div class="col-12 col-lg-3 ">
                <div class="footer__nav">
                    <h6>{{ section.settings.menu_title_2 }}</h6>
                    {%- assign footer_menu_2 = section.settings.footer_menu_2 -%}
                    {%- if footer_menu_2 != blank -%}
                      {% assign linklist = footer_menu_2 | linklist %}
                      {% if linklist.links.size > 0 %}
                        <ul>
                          {% for link in linklist.links %}
                            <li><a href="{{ link.url }}">{{ link.title | escape }}</a></li>
                          {% endfor %}
                        </ul>
                      {% endif %}
                    {%- endif -%}

                    
                </div>
            </div>
            <div class="col-12 col-lg-3">
                <div class="footer__nav">
                    <h6>{{ section.settings.subs_title }}</h6>
                    <h5>{{ section.settings.subs_content }}</h5>
                    <h5>{{ section.settings.subs_content_2 }}</h5>
                    {%- form 'customer', id: 'ContactFooter', class: 'footer-form' -%}
                      <input type="hidden" name="contact[tags]" value="newsletter">
                      <div class="newsletter-form__field-wrapper">
                        <div class="field">
                          <input
                            id="NewsletterForm--{{ section.id }}"
                            type="email"
                            name="contact[email]"
                            class=""
                            value="{{ form.email }}"
                            aria-required="true"
                            autocorrect="off"
                            autocapitalize="off"
                            autocomplete="email"
                            {% if form.errors %}
                              autofocus
                              aria-invalid="true"
                              aria-describedby="ContactFooter-error"
                            {% elsif form.posted_successfully? %}
                              aria-describedby="ContactFooter-success"
                            {% endif %}
                            placeholder="Enter Your Email"
                            required
                          >
                          <button
                            type="submit"
                            class="newsletter-form__button field__button"
                            name="commit"
                            id="Subscribe"
                            aria-label="{{ 'newsletter.button_label' | t }}"
                          >
                            {% render 'icon-arrow' %}
                          </button>
                        </div>
                        {%- if form.errors -%}
                          <small class="newsletter-form__message form__message" id="ContactFooter-error">
                            {%- render 'icon-error' -%}
                            {{- form.errors.translated_fields.email | capitalize }}
                            {{ form.errors.messages.email -}}
                          </small>
                        {%- endif -%}
                      </div>
                      {%- if form.posted_successfully? -%}
                        <h3
                          class="newsletter-form__message newsletter-form__message--success form__message"
                          id="ContactFooter-success"
                          tabindex="-1"
                          autofocus
                        >
                          {% render 'icon-success' -%}
                          {{- 'newsletter.success' | t }}
                        </h3>
                      {%- endif -%}
                    {%- endform -%}
                  
                </div>
            </div>
            <div class="col-12 ">
                <div class="footer__copyright">
                    {{ section.settings.copy_text }}
                    <div class="pay-img">
                        <a href="">
                            <img src="assets/images/copy-1.png" alt="">

                        </a>
                        <a href="">
                            <img src="assets/images/copy-2.png" alt="">

                        </a> <a href="">
                            <img src="assets/images/copy-3.png" alt="">

                        </a> <a href="">
                            <img src="assets/images/copy-4.png" alt="">

                        </a> <a href="">
                            <img src="assets/images/copy-5.png" alt="">
                        </a>
                        <a href="">
                            <img src="assets/images/copy-6.png" alt="">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>



{% schema %}
  {
    "name": "Custom Footer",
    "tag": "section",
    "class": "footer-bar-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "footer_logo",
        "label": "Logo"
      },
      {
        "type": "richtext",
        "id": "content",
        "default": "<p>Collections</p>",
        "label": "Content"
      },
      {
        "type": "text",
        "id": "menu_title_1",
        "default": "Collections",
        "label": "Menu Title 1"
      },
      {
        "type": "link_list",
        "id": "footer_menu",
        "default": "main-menu",
        "label": "Menu 1"
      },
      {
        "type": "text",
        "id": "menu_title_2",
        "default": "Collections",
        "label": "Menu Title 2"
      },
      {
        "type": "link_list",
        "id": "footer_menu_2",
        "default": "main-menu",
        "label": "Menu 2"
      },

      {
        "type": "text",
        "id": "subs_title",
        "default": "Collections",
        "label": "Subscriber Title"
      },
      {
        "type": "text",
        "id": "subs_content",
        "default": "Collections",
        "label": "Subscriber Content"
      },
      {
        "type": "text",
        "id": "subs_content_2",
        "default": "Collections",
        "label": "Subscriber Content 2"
      },
      {
        "type": "richtext",
        "id": "copy_text",
        "default": "<p>Collections</p>",
        "label": "Copyrights"
      }
    


  ],
  "presets": [
      {
        "name": "Custom Footer"
      }
    ]
  }
  {% endschema %}

  